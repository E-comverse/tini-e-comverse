<view class="product-preview">
  <view class="product-preview-thumbnail">
    <image src={{imageUrl}}>
    </image>
  </view>
  <view class="product-preview-text">
    <text class="product-preview-name font-bold">{{name}}</text>
    <price-text price={{price}} />
    <text class="product-preview-quantity">
      {{quantity}}
    </text>
  </view>
</view>